<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="detailsPageTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="android:actionBarStyle">@style/MyActionBar_detail</item>


        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar_detail</item>

    </style>
    <color name="background_detail">#000080</color>
    <color name="foreground_detail">@android:color/white</color>
    <style name="MyActionBar_detail" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/MyTitleTextStyle_detail</item>
        <item name="android:background">@color/background_detail</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/MyTitleTextStyle_detail</item>
        <item name="background">@color/background_detail</item>
    </style>

    <style name="MyTitleTextStyle_detail" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/foreground_detail</item>
    </style>

</resources>