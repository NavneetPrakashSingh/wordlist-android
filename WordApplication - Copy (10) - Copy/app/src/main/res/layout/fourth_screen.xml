<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Searching for a meaning of a word? Use our search service. Simply by clicking the 'Begin Search' button below , you have to enter the word you are searching for and if its in our database it will show up. "
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#2c3e50"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Begin Search"
        android:id="@+id/button2"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:onClick="serchClick"
        android:background="#2c3e50"
        android:padding="8sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#ecf0f1"
        android:layout_marginTop="10dp" />
</LinearLayout>