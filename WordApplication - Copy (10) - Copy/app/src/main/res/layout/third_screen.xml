<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Random words from the web are displayed to you, in case you don't know the meaning , you can add the word to your list, and parse them later, or add them to your quiz or favorite list."
        android:id="@+id/thirdtextview2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_marginLeft="5dp"
        android:textColor="#2c3e50"
        android:layout_marginRight="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let&apos;s Start"
        android:onClick="clicked"
        android:id="@+id/firstbutton"
        android:layout_alignParentBottom="true"
android:padding="5dp"

        android:layout_toRightOf="@+id/thirdtextview"
        android:layout_toEndOf="@+id/thirdtextview"
        android:layout_gravity="center_horizontal"
        android:background="#2c3e50"
        android:textColor="#ecf0f1"
        android:layout_marginTop="10dp" />

</LinearLayout>