<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.navneet.datawithlist.Details"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="word"
        android:id="@+id/word_text"
        android:textColor="#000080"
        android:textSize="32dp"
        android:textStyle="bold"
        android:fontFamily="segoe WP"
        android:layout_below="@+id/btnspeak"
        android:layout_toEndOf="@+id/textView11"
        android:layout_toRightOf="@+id/textView11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="meaning"
        android:id="@+id/meaning_text"
        android:textColor="#000080"
        android:layout_below="@+id/word_text"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:fontFamily="segoe WP" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="sentence"
        android:id="@+id/sentence"
        android:textColor="#000080"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/meaning_text"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:fontFamily="segoe WP" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="fill data"
        android:id="@+id/data"
        android:layout_below="@+id/sentence"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="146dp"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="(m) :"
        android:id="@+id/textView9"
        android:textColor="#000080"
        android:layout_below="@+id/word_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fontFamily="segoe WP" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="(s)  :"
        android:id="@+id/textView11"
        android:textColor="#000080"
        android:layout_alignTop="@+id/sentence"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fontFamily="segoe WP" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sp"
        android:id="@+id/btnspeak"
        android:onClick="speak"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#16a085"
        android:textColor="#ecf0f1" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:layout_toLeftOf="@+id/btnspeak"
        android:src="@drawable/q"
        android:layout_marginRight="3dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="center"
        android:layout_toLeftOf="@+id/image"
        android:src="@drawable/star"
        android:visibility="gone" />

</RelativeLayout>
